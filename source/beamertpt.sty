%--- tptsection
% Prototype :
% \tptsection
%          [short_title]
%          {title}
\def\tptsection{\@ifstar\@@tptsection\@tptsection}
\newcommandx{\@tptsection}[2][{1={}}]{%
  \ifthenelse{\equal{#1}{}}{%
    \section{#2}%
  }{%
    \section[#1]{#2}%
  }%
  \tptsectionframe{\arabic{section}}{#2}%
}
\newcommandx{\@@tptsection}[2][{1={}}]{%
  \ifthenelse{\equal{#1}{}}{%
    \section*{#2}%
  }{%
    \section*[#1]{#2}%
  }%
  \addtocounter{section}{-1}%
  \tptsectionframe{}{#2}%
}

%- tptsectionframe
% Prototype :
% \tptsectionframe
%               {number}
%               {title}
